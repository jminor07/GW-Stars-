
# Application parameters:
set powbg "#cccccc"
set powcursor "crosshair"
set powResizeMain "1"
set showlinks "0"
set powScopeWidth "150"
set powScopeHeight "150"
set powMinHeight "350"
set powMinWidth "350"
set powGUIposition "top"
set powLutButton "3"
set powROIButton "1"

# Default Font Parameters:
set powFontParam(titleFont,powDef) "courier"
set powFontParam(titleSize,powDef) "16"
set powFontParam(titleWeight,powDef) "normal"
set powFontParam(titleSlant,powDef) "roman"
set powFontParam(titleColor,powDef) "#000000"
set powFontParam(axisFont,powDef) "courier"
set powFontParam(axisSize,powDef) "12"
set powFontParam(axisWeight,powDef) "normal"
set powFontParam(axisSlant,powDef) "roman"
set powFontParam(axisColor,powDef) "#000000"
set powFontParam(tickFont,powDef) "courier"
set powFontParam(tickSize,powDef) "12"
set powFontParam(tickWeight,powDef) "normal"
set powFontParam(tickSlant,powDef) "roman"
set powFontParam(tickColor,powDef) "#000000"
set powFontParam(noteFont,powDef) "courier"
set powFontParam(noteSize,powDef) "12"
set powFontParam(noteWeight,powDef) "normal"
set powFontParam(noteSlant,powDef) "roman"
set powFontParam(noteColor,powDef) "#000000"

# Default Graph Parameters:
set powPlotParam(tickLabels,powDef) "degrees"
set powPlotParam(xTickScal,powDef) "linear"
set powPlotParam(yTickScal,powDef) "linear"
set powPlotParam(xNumTicks,powDef) "3"
set powPlotParam(yNumTicks,powDef) "3"
set powPlotParam(xTickLength,powDef) "10 10 10 10"
set powPlotParam(yTickLength,powDef) "10 10 10 10"
set powPlotParam(xLabelTicks,powDef) "Yes No No Yes"
set powPlotParam(yLabelTicks,powDef) "Yes No No Yes"
set powPlotParam(tickFormatCmdX,powDef) "format %.6lg"
set powPlotParam(tickFormatCmdY,powDef) "format %.6lg"
set powPlotParam(GridLines,powDef) "No"
set powPlotParam(GridColor,powDef) "#FFFFFF"
set powPlotParam(GridDash,powDef) " "
set powPlotParam(xdimdisp,powDef) "500"
set powPlotParam(ydimdisp,powDef) "500"

# Default Curve Parameters:
set powCurveParam(pDisp,powDef) "Yes"
set powCurveParam(pShape,powDef) "Cross"
set powCurveParam(pSizeErr,powDef) "No"
set powCurveParam(pSize,powDef) "4"
set powCurveParam(pFill,powDef) "No"
set powCurveParam(pColor,powDef) "#000000"
set powCurveParam(lDisp,powDef) "No"
set powCurveParam(lStyle,powDef) " "
set powCurveParam(lWidth,powDef) "1"
set powCurveParam(lStep,powDef) "No"
set powCurveParam(lBoxFill,powDef) "No"
set powCurveParam(lColor,powDef) "#000000"
set powCurveParam(logX,powDef) "No"
set powCurveParam(logY,powDef) "No"
set powCurveParam(LOD,powDef) "0"

# Default Image Parameters:
set powImageParam(colormap,powDef) "spectrum"
set powImageParam(invert,powDef) "No"
set powImageParam(scale,powDef) "histo"
